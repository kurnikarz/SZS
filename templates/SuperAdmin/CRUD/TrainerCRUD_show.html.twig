
{% extends 'base.html.twig' %}

{% block title %}CRUD : Trainer show{% endblock %}
{% block body  %}
    {% include asset('inc/navbarSA.html.twig') %}
    <div class="container">
        <div class="row mt-2 ">
            <div class="col-sm-6 bg-light m-auto text-center">
                <h4>Szczegóły konta: <name_color class ="text-danger">{{ trainer.name }}</name_color></h4>
            </div>
        </div>
        <div class="col-sm-6  ml-auto mr-auto mt-2 text-center">
            <label class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Id.</span>
                </div>
                <label  class="form-control">
                    {{ trainer.id }}
                </label>
            </label>
            <label class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Name</span>
                </div>
                <label  class="form-control">
                    {{ trainer.name }}
                </label>
            </label>
            <label class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Surname</span>
                </div>
                <label  class="form-control">
                    {{ trainer.surname }}
                </label>
            </label>
            <label class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Email</span>
                </div>
                <label  class="form-control">
                    {{ trainer.email }}
                </label>
            </label>
            <label class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Number</span>
                </div>
                <label  class="form-control">
                    {{ trainer.number }}
                </label>
            </label>
            <a href="{{ asset('SuperAdmin/crudSA/TrainerCRUD') }}" class="btn btn-info">Powrót</a>
        </div>
    </div>


{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}