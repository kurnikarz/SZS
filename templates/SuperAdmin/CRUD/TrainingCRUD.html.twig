
{% extends 'base.html.twig' %}

{% block title %}CRUD : Training{% endblock %}
{% block body  %}
    {% include asset('inc/navbarSA.html.twig') %}
    <div class="container">
        <div class="row text-center">
            <div class="col-sm-12">
                <a href="{{ asset('SuperAdmin/crudSA/TrainingCRUD/add') }}" class="float-right text-center mt-2 btn btn-success mb-1">Add Training</a>
            </div>
            <table class="table table-striped mt-2 ">
                <thead>
                <tr>
                    <th>Id.</th>
                    <th>Name</th>
                    <th>Trainer id.</th>
                    <th>Description</th>
                    <th>Start Date</th>
                    <th>End date</th>
                    <th>Price</th>
                </tr>
                </thead>
                <tbody>
                {% for training in Training %}
                    <tr>
                        <td>{{ training.id }}</td>
                        <td>{{ training.name }}</td>
                        <td>{{ training.trainer.id }}</td>
                        <td>{{ training.description }}</td>
                        <td>{{ training.startDate|date('d-m-Y') }}</td>
                        <td>{{ training.endDate|date('d-m-Y') }}</td>
                        <td>{{ training.price }}</td>
                        <td>
                            <a href="{{ asset('SuperAdmin/crudSA/TrainingCRUD/show/'~ training.id) }}" class="btn btn-dark">Show</a>
                            <a href="{{ asset('SuperAdmin/crudSA/TrainingCRUD/edit/'~ training.id) }}" class="btn btn-info">Edit</a>
                            <a href="{{ asset('SuperAdmin/crudSA/TrainingCRUD/delete/'~ training.id) }} "class="btn btn-danger" >Delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}