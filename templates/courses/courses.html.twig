{% extends 'base.html.twig' %}

{% block title %}My Courses{% endblock %}

{% block body %}
{{ include('inc/navbarT.html.twig')}}

{% if courses %}
<h1>Details of courses</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Place</th>
                <th>Date</th>
                <th>Members</th>
            </tr>
        </thead>
        <tbody>
            {% for course in courses %}
                {% if app.user.id == course.trainer %}
                    <tr>
                        <td>{{ course.name }}</td>
        
                        <td>{{ course.place }}</td>
    
                        <td>{{ course.time|date('d-m-Y H:i')}}</td>

                        <td><a href="/members" type="button" class="btn btn-info">Show members</td>

                    </tr>
                {% endif %}
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <h1>You have no courses :(</h1>
{% endif %}
{% endblock %}