{% extends 'base.html.twig' %}

{% block title %}My Courses{% endblock %}

{% block body %}
{{ include('inc/navbarT.html.twig')}}

{% if trainings %}
<h1>Details of courses</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Date</th>
                <th>Members</th>
            </tr>
        </thead>
        <tbody>
            {% for training in trainings %}
                {% if app.user.id == training.trainer.id %}
                    <tr>
                        <td>{{ training.name }}</td>
        
                        <td>{{ training.description }}</td>
    
                        <td>{{ training.startdate|date('d-m-Y H:i')}}</td>

                        <td><a href="{{ asset('/course/'~ training.id) }}" type="button" class="btn btn-info">Show members</td>
                    </tr>
                {% endif %}
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <h1>You have no courses :(</h1>
{% endif %}
{% endblock %}