{% extends 'base.html.twig' %}

{% block title %}My Courses{% endblock %}

{% block body %}
{{ include('inc/navbarT.html.twig')}}

{% if members %}
<h1>Members of course</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Email</th>
                <th>Phone number</th>
            </tr>
        </thead>
        <tbody>
            {% for member in members %}
                    {% if member.training.id == app.user.id %} 
                                <tr>
                            <td>{{ member.name }}</td>
            
                            <td>{{ member.surname }}</td>
        
                            <td>{{ member.email}}</td>

                            <td>{{ member.number }}</td>
                        </tr>
                    {% endif %}
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <h1>There are no members :(</h1>
{% endif %}
{% endblock %}