{% extends 'base.html.twig' %}

{% block title %}My Courses{% endblock %}

{% block body %}
{{ include('inc/navbarT.html.twig')}}

{% if members %}
<h1>Members of course</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>name</th>
                <th>surname</th>
                <th>number</th>
            </tr>
        </thead>
        <tbody>
            {% for member in members %}
                {% for training in trainings %}
                    {% if app.user.id == training.trainer.id %} 
                        <tr>
                            <td>{{ member.email }}</td>
            
                            <td>{{ member.name }}</td>
        
                            <td>{{ member.surname}}</td>

                            <td>{{ member.number }}</td>
                        </tr>
                        {% endif %} 
                    {% endfor %}
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <h1>There are no members :(</h1>
{% endif %}
{% endblock %}