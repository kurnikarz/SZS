{% extends 'base.html.twig' %}

{% block title %}Trainer{% endblock %}

{% block body %}
{{ include('inc/navbarT.html.twig')}}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="container text-center">
    <h1>Hello {{ app.user.name }} </h1><br>
        <div class="text-center row">
            {% if trainings %}
                <h3>Your closest courses</h3>
                    <div class="row">
                        <table class="table table-striped col-md-4 text-center">
                            <tbody>
                                {% for training in trainings %}
                                    {% if app.user.id == training.trainer.id %}
                                        <td>{{ training.name }}</td>
                                    {% endif %}
                                {% endfor %}
                            </tbody>
                        </table>
        </div>
        </div>
            {% endif %}
    </div>
{% endblock %}
